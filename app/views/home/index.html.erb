<h1 align="center"> Welcome To Joe's Pizza!</h1>


<div class="container">
  <div class="row">
<% @recipes.each do |recipe| %>
  <div class="col-md-4">
    <h3><%= recipe.name %></h3>
    <%= image_tag "Half_n_Half.jpg", :alt => "default", :size => "300x250"%>
    <% recipe.ingredients.each do |ingredient| %>
    <%= ingredient.name %>
    <% end %>
  </div>
<% end %>
  </div>
</div>